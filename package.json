{
  "name": "tab-invaders",
  "version": "1.1.0",
  "description": "A game of space invaders to deal with your browser tabs",
  "private": false,
  "dependencies": {
    "file-loader": "^1.1.11",
    "phaser-ce": "^2.10.3",
    "webextension-polyfill": "^0.2.1"
  },
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "web-ext": "^2.7.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15"
  },
  "scripts": {
    "build": "webpack --mode=development --display-error-details --progress --colors",
    "build:prod": "webpack --mode=production --display-error-details --progress --colors",
    "build:watch": "npm run build -- -w",
    "start": "npm run build && web-ext run -s build/extension/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrkno/tab-invaders.git"
  },
  "keywords": [
    "space",
    "invaders",
    "tabs",
    "browser",
    "webextension",
    "firefox",
    "chrome"
  ],
  "author": "Matthew Knox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrkno/tab-invaders/issues"
  },
  "homepage": "https://github.com/mrkno/tab-invaders#readme"
}
