{
	"manifest_version": 2,
	"name": "tab-invaders",
	"description": "Solve your tab addiction with a quick game of space invaders.",
	"version": "1.0",
	"permissions": [
		"tabs",
		"storage",
		"activeTab"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Tab Invaders"
	},
	"background": {
		"scripts": ["invaders.js"],
		"persistent": false
	}
}
