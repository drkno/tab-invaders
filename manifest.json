{
	"manifest_version": 2,
	"name": "tab-invaders",
	"description": "Solve your tab addiction with a quick game of space invaders.",
	"version": "1.0",
	"icons": {
		"16": "src/img/icon/icon16.png",
		"48": "src/img/icon/icon48.png",
		"128": "src/img/icon/icon128.png"
	},
	"permissions": [
		"tabs",
		"storage",
		"activeTab",
		"<all_urls>"
	],
	"browser_action": {
		"default_icon": {
			"16": "src/img/icon/icon16.png",
			"48": "src/img/icon/icon48.png",
			"128": "src/img/icon/icon128.png"
		},
		"default_title": "Tab Invaders"
	},
	"background": {
		"scripts": ["src/invaders.js"],
		"persistent": false
	}
}
